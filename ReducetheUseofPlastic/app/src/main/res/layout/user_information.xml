<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInformationActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="프로필 사진"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/img_modifiy_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/user"/>

    <EditText
        android:id="@+id/edit_modify_nickname"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_modifiy_user"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:hint="닉네임"
        android:textSize="18dp"/>



    <EditText
        android:id="@+id/edit_modify_password"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_modify_nickname"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:textSize="18dp"/>



    <EditText
        android:id="@+id/edit_modify_password2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_modify_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="비밀번호 재입력"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_modify_password2"
        android:layout_alignLeft="@id/edit_modify_password2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="은행"
        android:textColor="#000000"
        android:textSize="20dp"/>


    <Spinner
        android:id="@+id/spinner_bank"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv1"
        android:layout_alignBottom="@id/tv1"
        android:layout_marginLeft="15dp"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/edit_modify_account"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="계좌번호"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/btn_user_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/edit_modify_account"
        android:layout_marginTop="30dp"
        android:text="수정"
        android:textSize="20dp"
        android:textStyle="bold"/>


</RelativeLayout>